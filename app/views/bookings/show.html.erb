<div class="card">
  <div class="card-body">

    <%= render partial: 'flight_details' %>

  </div>
</div>

<div class="card mt-3">
  <div class="card-body col-10">

    <h3 class="card-title">Passengers</h3>
    <table class="table table-striped">
      <tbody>

        <thead class="thead-dark">
          <tr>
            <th scope="col"></th>
            <th scope="col">Last Name</th>
            <th scope="col">First Name</th>
            <th scope="col">Email</th>
            <th scope="col"></th>
          </tr>
        </thead>

        <% @booking.passengers.each_with_index do |passenger, i| %>

          <tr>
            <th scope="row"><%= i+1 %></td>
            <td><%= passenger.last_name %></td>
            <td><%= passenger.first_name %></td>
            <td><%= passenger.email %></td>
            <td><%= link_to "View Ticket", passenger_path(passenger) %></td>
          </tr>

        <% end %>

      </tbody>
    </table>
    <%= link_to "Book Another Flight", flights_path, class: "btn btn-primary mt-3" %>
  </div>
</div>
