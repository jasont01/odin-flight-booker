<div class="card">
  <div class="card-body">

    <%= render partial: 'flight_details' %>

  </div>
</div>

<div class="card mt-3">
  <div class="card-body">

    <h3 class="card-title">Passengers</h3>
    <% @booking.passengers.each_with_index do |passenger, i| %>
      <p class="card-text"><%= i+1 %>. <%= passenger.last_name %>, <%= passenger.first_name %><%= passenger.email %></p>
    <% end %>

  </div>
</div>
